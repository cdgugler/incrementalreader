{
    "manifest_version": 2,
    "name": "Incremental Reader",
    "description": "Keep your place and save notes from websites.",
    "version": "0.1",
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js":["content.js"]
        }
    ],
    "background": {
        "scripts": ["eventPage.js"],
        "persistant": false
    },
    "permissions": [
        "tabs",
        "storage",
        "unlimitedStorage",
        "contextMenus"
    ]
}
